/* Logo */
/* ****************** */

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: transparent;
  height: 9.6rem;
  padding: 0 4.8rem;
      margin-left: auto;
    margin-right: auto;
}

.logo {
  height: 2.2rem;
  font-size: 9.6rem;
  text-decoration: none;
  text-align: center;
  font-weight: bold;
  color: black;
      margin-left: auto;
    margin-right: auto;
	
}

/* ****************** */
/* Navigation */
/* ****************** */

.main-nav-list {
  list-style: none;
  display: flex;
  align-items: center;
  gap: 6.8rem;
}

.main-nav-link {
  display: inline-block;
  text-decoration: none;
  color: #462d12;
  font-weight: 400;
  font-size: 1.8rem;
}
.mydivouter{
	position:relative;
	background: #f90;
    width: 200px;
    height: 120px;
    margin: 0 auto;
}
.mydivoverlap{
    position: relative;
    z-index: 1;
}
.link-nike {
  display: inline-block;
  text-decoration: underline;
  color: #442d12;
  font-weight: 400;
  font-size: 1.8rem;
}
.link-adidas {
  display: inline-block;
  text-decoration: underline;
  color: #442d12;
  font-weight: 400;
  font-size: 1.8rem;
}


.main-nav-link.nav-cta {
  padding: 1.2rem 2.4rem;
  border-radius: 9px;
  color: #fff;
  background-color: #523414;
}

/* ****************** */
/* Hero section */
/* ****************** */
.section-hero {
  padding: 15rem 0 9.6rem;
}

.hero {
  max-width: 750rem;
