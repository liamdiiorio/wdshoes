* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  /* 10px / 16px = 0.625 =62.5*/
  font-size: 62.5%;
  overflow-x: hidden;
  scroll-behavior: smooth;
}
/*Style for Descriptions*/
body {
  font-family: 'Rubik', sans-serif;
  line-height: 1.5;
  font-size: 1.3rem;
  font-weight: 400;
  overflow-x: hidden;
  color: black;
  background-color: #009999;
}
.home {
  padding: 2rem 0 7rem 0;
}

.main-nav img {
  width: 50%;
  justify-self: end;
  border-radius: 0px;
}

.main-nav p {
  font-size: 2.2rem;
}

.text {
  max-width: 45rem;
  background-color: #e7ac21;
  padding: 10rem 5rem;
  margin-left: -5rem;
  border-radius: 9px;
}

.text h2 {
  margin-bottom: 4.5rem;
  text-align: center;
}
/*Home Button*/
.home-btn {
  background-color: blue;
  color: white;
  padding: 15px 25px;
  text-decoration: none;
  border-radius: 8px;
}
.home-btn:hover {
  background-color: #223094;
  
}
/*Nike Button*/
.nike-btn {
  background-color: yellow;
  color: white;
  padding: 15px 25px;
  text-decoration: none;
  border-radius: 9px;
}
.nike-btn:hover {
  background-color: #223094;
  
}
/*adidas Button*/
.adidas-btn {
  background-color: red;
  color: white;
  padding: 15px 25px;
  text-decoration: none;
  border-radius: 9px;
}
.adidas-btn:hover {
  background-color: #223094;
  
}
/*Other Button*/
.other-btn {
  background-color: black;
  color: white;
  padding: 15px 25px;
  text-decoration: none;
  border-radius: 9px;
}
.other-btn:hover {
  background-color: #223094;
  
}

/*Image Reference Button*/
.image-btn {
  background-color: white;
  color: black;
  padding: 15px 25px;
  text-decoration: none;
  border-radius: 9px;
}
.image-btn:hover {
  background-color: #223094;
  
}
/*Heading Styles on Home Page*/
.heading-primary,
.heading-secondary,
.heading-tertiary {
  font-weight: 700;
  color: black;
  letter-spacing: -0.5px;
      margin-left: auto;
    margin-right: auto;
}

.heading-primary {
  font-size: 5.2rem;
  line-height: 1.05;
  margin-bottom: 3.2rem;
      margin-left: auto;
    margin-right: auto;
}

.heading-secondary {
  font-size: 4.4rem;
  line-height: 1.2;
  margin-bottom: 5.6rem;
  text-align: auto;
      margin-left: auto;
    margin-right: auto;
}

.heading-tertiary {
  font-size: 3rem;
  line-height: 1.2;
  margin: 1.2rem;
      margin-left: auto;
    margin-right: auto;
}

a {
  text-decoration: none;
}



